							a(href="#") <i class="fa fa-phone-square" aria-hidden="true"></i>
						li.uk-flex-center
							a(href="#") <i class="fa fa-map-marker" aria-hidden="true"></i>
						li.uk-flex-center
							a(href="#") <i class="fa fa-envelope" aria-hidden="true"></i>
					
					ul(class="uk-switcher uk-margin" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress")
						li.uk-active
							p(class="uk-light" itemprop="telephone") +7 812 409-00-90
						li
							p(class="uk-light" itemprop="streetAddress") #[span(itemprop="addressLocality") Санкт-Петербург] , #[span(itemprop="postalCode") 195197] , #[span(itemprop="streetAddress") Маршала Блюхера пр-кт, д.12, корп. 7, лит. Б]
